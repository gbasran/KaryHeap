{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g", "src/*.cpp", "-I", "include", "-o", "output", ";", "./output"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$gcc"
    }
  ]
}